/* Light Theme for Text Adventure Game UI */

/* Global Styles */
QWidget {
    background-color: #eff1f5;
    color: #4c4f69;
    font-family: 'Segoe UI', 'Arial', sans-serif;
    font-size: 10pt;
}

QLabel {
    color: #4c4f69;
}

QTextEdit, QLineEdit, QPlainTextEdit {
    background-color: #e6e9ef;
    border: 1px solid #ccd0da;
    border-radius: 4px;
    padding: 4px;
    selection-background-color: #1e66f5;
    selection-color: #ffffff;
}

QTextEdit:focus, QLineEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #1e66f5;
}

QPushButton {
    background-color: #dce0e8;
    border: 1px solid #ccd0da;
    border-radius: 4px;
    padding: 6px 12px;
    color: #4c4f69;
}

QPushButton:hover {
    background-color: #ccd0da;
}

QPushButton:pressed {
    background-color: #bcc0cc;
}

QPushButton:disabled {
    background-color: #e6e9ef;
    color: #9ca0b0;
}

QScrollBar:vertical {
    border: none;
    background-color: #e6e9ef;
    width: 10px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #bcc0cc;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::handle:vertical:hover {
    background-color: #9ca0b0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    border: none;
    background-color: #e6e9ef;
    height: 10px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #bcc0cc;
    min-width: 20px;
    border-radius: 5px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #9ca0b0;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

QTabWidget::pane {
    border: 1px solid #ccd0da;
    border-radius: 4px;
    top: -1px;
}

QTabBar::tab {
    background-color: #e6e9ef;
    border: 1px solid #ccd0da;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 6px 12px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background-color: #dce0e8;
}

QTabBar::tab:hover:!selected {
    background-color: #ccd0da;
}

QListWidget {
    background-color: #e6e9ef;
    border: 1px solid #ccd0da;
    border-radius: 4px;
    outline: none;
}

QListWidget::item {
    padding: 4px;
    border-radius: 2px;
}

QListWidget::item:selected {
    background-color: #1e66f5;
    color: #ffffff;
}

QListWidget::item:hover:!selected {
    background-color: #dce0e8;
}

QMenu {
    background-color: #e6e9ef;
    border: 1px solid #ccd0da;
    border-radius: 4px;
}

QMenu::item {
    padding: 6px 24px 6px 12px;
}

QMenu::item:selected {
    background-color: #dce0e8;
}

QToolTip {
    background-color: #e6e9ef;
    color: #4c4f69;
    border: 1px solid #ccd0da;
    border-radius: 4px;
    padding: 4px;
}

/* Custom Styles for Game UI */
#mainStoryTextEdit {
    font-size: 11pt;
    line-height: 1.4;
}

#gmLogTextEdit {
    font-size: 10pt;
    line-height: 1.3;
}

#statusBar {
    background-color: #e6e9ef;
    border-top: 1px solid #ccd0da;
    padding: 4px;
}

/* Progress Bar Styling - No Animation */
QProgressBar {
    border: 1px solid #ccd0da;
    border-radius: 2px;
    text-align: center;
    min-height: 16px;
    background-color: #acb0be; /* Dark grey for depleted portion */
}

QProgressBar::chunk {
    border-radius: 1px;
}

/* Specific Progress Bar Colors */
#healthBar::chunk {
    background-color: #d20f39; /* Red for health */
}

#manaBar::chunk {
    background-color: #1e66f5; /* Blue for mana */
}

#staminaBar::chunk {
    background-color: #df8e1d; /* Yellow for stamina */
}

#timeOfDayLabel {
    font-weight: bold;
    color: #df8e1d;
}

#inventoryList {
    font-size: 10pt;
}

#characterWindow {
    background-color: #eff1f5;
    border: 1px solid #ccd0da;
    border-radius: 4px;
}

#equipmentSlot {
    background-color: #e6e9ef;
    border: 1px dashed #ccd0da;
    border-radius: 4px;
    padding: 8px;
    min-height: 40px;
    min-width: 120px;
}

#equipmentSlot[occupied="true"] {
    border: 1px solid #1e66f5;
}

#slotLabel {
    color: #9ca0b0;
    font-size: 9pt;
}

#itemActionMenu {
    background-color: #e6e9ef;
    border: 1px solid #ccd0da;
    border-radius: 4px;
}

#itemTooltip {
    background-color: #e6e9ef;
    border: 1px solid #ccd0da;
    border-radius: 4px;
    padding: 8px;
    max-width: 300px;
}

#itemName {
    font-weight: bold;
    font-size: 11pt;
    color: #1e66f5;
}

#itemRarity {
    font-style: italic;
    font-size: 9pt;
}

#itemDescription {
    margin-top: 4px;
    margin-bottom: 4px;
}

#itemStats {
    font-size: 9pt;
    color: #40a02b;
}

/* Rarity Colors */
.common {
    color: #4c4f69;
}

.uncommon {
    color: #40a02b;
}

.rare {
    color: #1e66f5;
}

.epic {
    color: #8839ef;
}

.legendary {
    color: #fe640b;
} 